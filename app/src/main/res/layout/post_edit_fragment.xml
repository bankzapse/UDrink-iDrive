<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/postprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_drive"
    tools:context=".presentationlayer.postprofile.PostProfileActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#c1000000">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pic_profile"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#646464"
            app:civ_shadow_radius="8"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_edittext"
            android:layout_margin="4dp">

            <co.th.udrinkidrive.MyFontsStyle.MyTextViewFonts
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First name"
                android:textColor="@color/blue"
                android:textSize="16dp"
                android:layout_marginLeft="4dp"/>

            <co.th.udrinkidrive.MyFontsStyle.MyEdittextFonts
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard"
                android:textColor="@color/white"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:padding="14dp"
                android:ems="300"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
