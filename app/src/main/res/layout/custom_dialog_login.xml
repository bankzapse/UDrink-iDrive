<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ln_box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/lv_box_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="24dp"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_loading_login"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo_udrink"
                android:transitionName="profile"/>

            <TableLayout
                android:id="@+id/tablelayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">

                <TableRow android:background="@drawable/border_table">

                    <co.th.udrinkidrive.MyFontsStyle.MyEdittextFonts
                        android:id="@+id/et_username"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:backgroundTint="#fff"
                        android:ems="300"
                        android:hint="@string/login_email"
                        android:inputType="textPersonName"
                        android:padding="14dp"
                        android:textColor="#fff"
                        android:textColorHint="@color/color_login_username_pass_hint"
                        android:textCursorDrawable="@null"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_table">

                    <co.th.udrinkidrive.MyFontsStyle.MyEdittextFonts
                        android:id="@+id/et_pass"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:backgroundTint="#fff"
                        android:hint="@string/login_password"
                        android:inputType="textPassword"
                        android:padding="14dp"
                        android:textColor="#fff"
                        android:textColorHint="@color/color_login_username_pass_hint"
                        android:textCursorDrawable="@null"
                        android:textSize="20dp" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <co.th.udrinkidrive.MyFontsStyle.MyButtonFonts
                        android:id="@+id/bt_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/selector_button"
                        android:padding="12dp"
                        android:text="@string/login_buttom"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:layout_marginBottom="10dp"-->
                        <!--android:orientation="horizontal">-->

                        <!--<co.th.udrinkidrive.MyFontsStyle.MyTextViewFonts-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:text="@string/login_don_have_acc"-->
                            <!--android:textColor="#fff"-->
                            <!--android:textSize="16dp" />-->

                        <!--<co.th.udrinkidrive.MyFontsStyle.MyTextViewFonts-->
                            <!--android:id="@+id/tv_sign_up"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:layout_marginLeft="4dp"-->
                            <!--android:text="@string/login_sing_up"-->
                            <!--android:textColor="@color/filter_select"-->
                            <!--android:textSize="16dp"/>-->

                    <!--</LinearLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">

                        <View
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:background="#C2C1C1"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"/>

                        <co.th.udrinkidrive.MyFontsStyle.MyTextViewFonts
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="5dp"
                            android:text="OR"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <View
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:background="#C2C1C1"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/fl_facebook"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <!--<com.facebook.login.widget.LoginButton-->
                            <!--android:id="@+id/login_button"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="center_horizontal|center_vertical" />-->

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/border_facebook"
                            android:padding="6dp">

                            <ImageView
                                android:id="@+id/img_back"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/icon_facebook"/>

                            <co.th.udrinkidrive.MyFontsStyle.MyTextViewFonts
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Login With Facebook"
                                android:textSize="14dp"
                                android:textColor="#fff"
                                android:layout_marginLeft="4dp"/>

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
